---
import { SOCIAL_LINKS } from '../constants/social';
import SkillsList from "../React/SkillsList.tsx";
import { ABOUT } from '../constants/descriptions';
---

<section class="text-[var(--white)] mt-12 md:mt-0" id="home">
  <div class="max-w-5xl mx-auto space-y-12 md:py-36 pb-14">
    <div class="text-left space-y-8 flex flex-col items-center">
      <h1 class="text-3xl md:text-5xl text-white font-bold shiny-white">
        {ABOUT.name}
      </h1>
      <div class="flex flex-col items-center space-y-8">
        <img 
          src="./public/img/pfp.webp" 
          alt="Profile Picture"
          class="w-48 h-48 rounded-full object-cover shadow-lg border-2 border-[var(--white-icon-tr)]"
          loading="lazy"
        />
        <p class="text-sm md:text-lg text-white text-center max-w-2xl">
            {ABOUT.summary1}{ABOUT.summary2}
        </p>
        <p class="text-sm md:text-lg text-white text-center max-w-2xl">
            {ABOUT.summary3}
        </p>
      </div>
      <div class="w-full max-w-md rounded-xl overflow-hidden border border-[var(--white-icon-tr)] bg-[#1414149c]">
        <iframe 
          width="100%" 
          height="166" 
          scrolling="no" 
          frameborder="no" 
          allow="autoplay" 
          src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/2029115692&color=%23A476FF&auto_play=false&hide_related=true&show_comments=false&show_user=true&show_reposts=false&show_teaser=false&visual=true"
          class="rounded-t-xl block"
        ></iframe>
        <div class="p-2 text-xs text-[var(--white-icon)] hover:text-white transition-colors">
          <a href="https://soundcloud.com/friidryce" title="DJ ent" target="_blank" class="hover:text-[var(--white)] transition-colors">DJ ent</a> Â· 
          <a href="https://soundcloud.com/friidryce/nan-slap-1" title="NAN SLAP 1" target="_blank" class="hover:text-[var(--white)] transition-colors">NAN SLAP 1</a>
        </div>
      </div>
      <div class="flex justify-center gap-2">
        {Object.values(SOCIAL_LINKS).map((link) => (
          <a 
            target="_blank" 
            href={link.href} 
            aria-label={link.label} 
            class="text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
          >
            <div set:html={link.icon} />
          </a>
        ))}
      </div>
    </div>
  
    <div class="flex flex-col items-center">
      <SkillsList client:load />
    </div>
  </div>
</section>